#!/usr/bin/env ruby
require 'lxdev'

if ARGV.empty?
  puts "Needs an argument"
  exit 1
end

lxdev = LxDev.setup()

case ARGV.first
when 'up'
  lxdev.up()
when 'status'
  lxdev.status()
when 'ssh'
  lxdev.ssh()
when 'halt'
  lxdev.halt()
when 'destroy'
  lxdev.destroy()
when 'provision'
  lxdev.provision()
else
  puts 'no can do'
end

lxdev.save_state
